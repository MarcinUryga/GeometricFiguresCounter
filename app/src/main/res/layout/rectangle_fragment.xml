<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/rectangle_area"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/countAreaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseEditText"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/count"/>

    <TextView
        android:id="@+id/resultDescriptionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/countAreaBtn"
        android:layout_below="@+id/countAreaBtn"
        android:layout_marginTop="38dp"
        android:text="@string/resultDescriptionView"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/baseEditText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/resultDescriptionView"
        android:maxLength="10"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/resultColor"
        android:textSize="45sp"/>

    <TextView
        android:id="@+id/heightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="60dp"
        android:text="@string/specify_height"/>

    <TextView
        android:id="@+id/baseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/heightTextView"
        android:text="@string/specify_base"/>

    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/heightTextView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/heightTextView"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        tools:ignore="LabelFor"/>

    <EditText
        android:id="@+id/baseEditText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/baseTextView"
        android:layout_alignStart="@+id/baseTextView"
        android:layout_below="@+id/baseTextView"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        tools:ignore="LabelFor"/>

</RelativeLayout>
