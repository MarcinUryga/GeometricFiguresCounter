<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/pole_trojkata_rownobocznego"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/triangleBaseView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="@string/wymiary_podstawy" />

    <EditText

        android:id="@+id/triangleBaseEditText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/triangleBaseView"
        android:layout_alignStart="@+id/triangleBaseView"
        android:layout_below="@+id/triangleBaseView"
        android:textAlignment="center" />


    <Button
        android:id="@+id/countAreaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/triangleBaseEditText"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Oblicz" />

    <TextView
        android:id="@+id/resultDescriptionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/countAreaBtn"
        android:layout_below="@+id/countAreaBtn"
        android:layout_marginTop="38dp"
        android:text="@string/resultDescriptionView" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultDescriptionView"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/resultColor"
        android:textSize="45dp" />


</RelativeLayout>
